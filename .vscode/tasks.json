{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Phoenix Server",
			"type": "shell",
			"command": "mix phx.server",
			"isBackground": true,
			"problemMatcher": [],
			"dependsOn": [
				"Run Docker Compose"
			]
		},
		{
			"label": "Run Docker Compose",
			"type": "shell",
			"command": "docker compose up -d",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"close": true
			}
		},
		{
			"label": "Run Mix Test Interactive",
			"type": "shell",
			"command": "mix test.interactive --stale",
			"isBackground": true,
			"problemMatcher": [],
			"runOptions": {
				"runOn": "folderOpen"
			},
			"dependsOn": [
				"Run Docker Compose"
			]
		},
		{
			"label": "Run Mix Check",
			"type": "shell",
			"command": "mix check",
			"isBackground": false,
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"clear": true
			},
			"dependsOn": [
				"Run Docker Compose"
			]
		},
	]
}